<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FaceDemo.Paginas.PaginaBienvenido"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label
                Margin="15"
                FontSize="Large"
                Text="Bienvenido"
                TextColor="Black" />

            <StackLayout Padding="15">
                <Image
                    x:Name="imagen"
                    HeightRequest="300"
                    WidthRequest="300" />
            </StackLayout>

            <Label
                x:Name="lblMensaje"
                Margin="15"
                FontSize="Medium"
                TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>